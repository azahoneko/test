{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "lib": [
      "es2015",
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true,
    "baseUrl": "./"
  },
  "exclude": [
    "node_modules",
    "./test-configs/*"
  ]
}
